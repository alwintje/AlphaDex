<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.alwin.alphadex.RoundedImageView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/header_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFFFF"
                android:padding="10dp"
                android:textSize="18dp"
                android:id="@+id/name"
                android:textAlignment="center"/>
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/details_background_one"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:text="@string/eye_color"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:id="@+id/eye_color"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/details_background_two"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:text="@string/hair_color"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:id="@+id/hair_color"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/details_background_three"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:text="@string/birth"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textAlignment="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:id="@+id/birth"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>